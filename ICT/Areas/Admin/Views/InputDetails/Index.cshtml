@model IEnumerable<DataLayer.InputDetail>

@{
    ViewBag.Title = "لیست قطعات ورودی";
}

    <h2>لیست قطعات ورودی</h2>

    <div class="table table-responsive">


        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tedad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hardware.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Input.FactorNo)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tedad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hardware.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Input.FactorNo)
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.InputDetailID }) |
                        @Html.ActionLink("نمایش", "Details", new { id = item.InputDetailID }) |
                        @Html.ActionLink("حذف", "Delete", new { id = item.InputDetailID })
                    </td>
                </tr>
            }

        </table>
    </div>