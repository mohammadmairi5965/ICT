@model IEnumerable<DataLayer.Input>

@{
    ViewBag.Title = "فاکتور های ورودی";
}

    <h2>فاکتور های ورودی</h2>

<p>
   <a class="btn btn-success" href="/Admin/Inputs/Create">ورودی جدید</a>
</p>
<div class="table table-responsive">


    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FactorNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InputDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FactorNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InputDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.InputID }) |
                    @Html.ActionLink("نمایش", "Details", new { id = item.InputID }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.InputID })
                </td>
            </tr>
        }

    </table>
</div>