@model DataLayer.service
@using Utilities;

@{
    ViewBag.Title = "ثبت سرویس";
}

<h2>
    ثبت سرویس
</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-offset-2">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.dateOfService, htmlAttributes: new { @class = "control-label" })
                    <br />
                    <div class="col-md-6 ">
                        @Html.TextBoxFor(model => model.dateOfService, new { @class = "pdate form-control", placeholder = "انتخاب تاریخ", id = "pcal2", @readonly = "readonly" })
                        @*<input name="dateOfService" value="@DateConvertor.ToShamsiDateTime(DateTime.Now) " class="form-control" />*@
                        @*@Html.EditorFor(model => model.dateOfService, new { htmlAttributes = new { @class = "form-control", value= } })*@
                        @Html.ValidationMessageFor(model => model.dateOfService, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Computer_ID, htmlAttributes: new { @class = "control-label " })
                    <br />
                    <div class="col-md-6">
                        @Html.DropDownList("Computer_ID", null, htmlAttributes: new { @class = "fstdropdown-select" })
                        @Html.ValidationMessageFor(model => model.Computer_ID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.SoftwareID, htmlAttributes: new { @class = "control-label " })
                    <br />
                    <div class="col-md-6">
                        @Html.DropDownList("SoftwareID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SoftwareID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Action, htmlAttributes: new { @class = "control-label " })
                    <br />
                    <div class="col-md-6">
                        @Html.DropDownList("Action", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Action, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.TypeOfServices, htmlAttributes: new { @class = "control-label " })
                    <br />
                    <div class="col-md-6">
                        @Html.DropDownList("TypeOfServices", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TypeOfServices, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="ثبت" class="btn btn-block btn-success" />
            </div>
        </div>

    </div>




}
@section scripts
{
    <script type="text/javascript">
        var objCal1 = new AMIB.persianCalendar('pcal2', {
            extraInputID: 'extra',
            extraInputFormat: 'YYYY/MM/DD - yyyy/mm/dd - JD'
        }
        );
    </script>
}

