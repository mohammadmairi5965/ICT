@model IEnumerable<DataLayer.OutputDetail>

@{
    ViewBag.Title = "لیست قطعات خروجی";
}

    <h2>لیست قطعات خروجی</h2>


<div class="table table-responsive">


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tedad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hardware.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Output.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tedad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hardware.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Output.Description)
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.OutputDetailID }) |
                    @Html.ActionLink("نمایش", "Details", new { id = item.OutputDetailID }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.OutputDetailID })
                </td>
            </tr>
        }

    </table>
</div>