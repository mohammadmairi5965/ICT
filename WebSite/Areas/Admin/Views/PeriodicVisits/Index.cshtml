@model IEnumerable<DataLayer.PeriodicVisits>

@{
    ViewBag.Title = "بازدید های دوره ای";
}

    <h2>بازدید های دوره ای</h2>

<p>
   <a class="btn btn-success" href="/Admin/PeriodicVisits/Create">بازدید دوره ای جدید</a>
</p>
<div class="table table-responsive">


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("نمایش", "Details", new { id = item.ID }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>