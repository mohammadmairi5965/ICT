@model DataLayer.Role

@{
    ViewBag.Title = "حذف نقش";
}

<h2>حذف نقش</h2>

<h3>آیا از حذف نقش @Model.RoleName  مطمئن هستید؟</h3>
@if (ViewBag.Error == true)
{
    <div class="alert alert-danger">
        حذف امکان پذیر نمی باشد
    </div>
}
<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RoleTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoleTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RoleName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoleName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-danger" /> |
            @Html.ActionLink("برگشت به لیست", "Index")
        </div>
    }
</div>
